@import "valoresDefault.styl"
@import "elmaguire.styl"

/* Estilos del demo */

.boton, .crono
	border-radius 1em
	box-shadow rgba(0,0,0,0.9) 0px 0px 8px, rgba(255,255,255,0.9) 0 1px 0 inset
	color #fff
	height 1em
	display inline-block
	filter none
	margin 0 15px 0 0
	padding 1.2em 0
	vertical-align middle
	width 15%

	background: rgb(157,213,58);
	background: unquote(' url(data:image/svg+xml;base64,) ')
	background: -moz-linear-gradient(-45deg,  rgba(157,213,58,1) 0%, rgba(161,213,79,1) 50%, rgba(128,194,23,1) 51%, rgba(124,188,10,1) 100%);
	background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,rgba(157,213,58,1)), color-stop(50%,rgba(161,213,79,1)), color-stop(51%,rgba(128,194,23,1)), color-stop(100%,rgba(124,188,10,1)));
	background: -webkit-linear-gradient(-45deg,  rgba(157,213,58,1) 0%,rgba(161,213,79,1) 50%,rgba(128,194,23,1) 51%,rgba(124,188,10,1) 100%);
	background: -o-linear-gradient(-45deg,  rgba(157,213,58,1) 0%,rgba(161,213,79,1) 50%,rgba(128,194,23,1) 51%,rgba(124,188,10,1) 100%);
	background: -ms-linear-gradient(-45deg,  rgba(157,213,58,1) 0%,rgba(161,213,79,1) 50%,rgba(128,194,23,1) 51%,rgba(124,188,10,1) 100%);
	background: linear-gradient(135deg,  rgba(157,213,58,1) 0%,rgba(161,213,79,1) 50%,rgba(128,194,23,1) 51%,rgba(124,188,10,1) 100%);
	filter: unquote(' progid:DXImageTransform.Microsoft.gradient( startColorstr=#9dd53a, endColorstr=#7cbc0a,GradientType=1 ) ')


.boton
	text-align center
	a
		color #fff
		cursor pointer
		display block
		font-weight bold
	.reinit
		display none

.controles
	margin 20px auto
	text-align center


.memoria
	text-align center
	article
		background #ffb76b
		border-radius 1em
		box-shadow rgba(0,0,0,0.9) 0px 0px 8px
		cursor inherit
		display inline-block
		filter none
		height 10em
		margin 1%
		min-width 150px
		opacity 0.4
		vertical-align top
		width 20%
		span
			display none
			font-size 1.5em
			font-weight bold
			inter 1.1em
			margin 2em 0 0 0

.retro
	background #b6dfed
	border-bottom 2px solid #197199
	border-top 2px solid #197199
	color #197199
	display none
	margin-top 2em
	width 100%
	&.incorrecto
		background #eaa6a6
		border-bottom 2px solid #842222
		border-top 2px solid #842222
		color #842222
	p
		display block
		margin 0.5em 0px 0.5em 1em
		width unquote(' calc(100% - 2em) ')


